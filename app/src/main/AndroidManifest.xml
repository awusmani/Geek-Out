<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.joshkosmides.geekout">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HostScreenActivity"
            android:label="@string/app_name" />

        <activity
            android:name=".RulesScreenActivity"
            android:label="@string/title_activity_rules"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GameScreen"
            android:label="@string/title_activity_game_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PracticeScreen"
            android:label="Practice Screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PracticeScore"
            android:label="Practice Score"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ScoreScreen"
            android:label="@string/title_activity_score_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".WaitingActivity"
            android:label="@string/title_activity_waiting"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <service android:name="PlayAudio"  android:enabled="true">
        </service>
    </application>

</manifest>